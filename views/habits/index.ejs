<!DOCTYPE html>
<html>
    <%- include("../partials/head.ejs") %> 

    <body>
        <%- include("../partials/header.ejs") %> 
        <main>
            <div>
            <a href="/habits/new"><button>Add New Habit</button></a>
            <a href="/user/logout"><button>Logout</button></a>
            <%  for (habit of habits){ %>
                <article>
                    <a href="/habits/<%=habit._id %>"> 
                    
                    <%=habit.name%> -
                    <%=habit.complete %> 
                </a>
                
                    <button>Check-in
                    </button>
                    
                </article>
            <% } %>
            <a href="/habits/pomodoro"><button>Pomodoro Timer</button></a>
            
        </div>
        </main>
    
    </body>

</html>